<script type="text/javascript">
    $(document).ready(function () {
        $('.calc-block').click(function (e) {
            e.preventDefault();
            $('.calc-form').addClass('calc-form-act');
        });
        $('.calc-form > button').click(function () {
            var from = $('#from').val();
            var to = $('#to').val();
            var m = $('#m').val();
            var v = $('#v').val();
            var sum = 100;

            if (from == 'Алматы') {
                switch (to) {
                    case from:
                        $('.calc-form > p').css('display', 'block').html('Города не могут быть одинаковыми!!!');
                        $('.calc-form > p').css('color', 'red');
                        break;

                    case 'Астана':
                        sum = sum * m * v;
                        $('.calc-form > p').css('display', 'block').html('Итого: ' + sum + ' тенге');
                        $('.calc-form > p').css('color', '#168346');
                        break;
                }
            }
            if (from == 'Астана') {
                switch (to) {
                    case from:
                        $('.calc-form > p').css('display', 'block').html('Города не могут быть одинаковыми!!!');
                        $('.calc-form > p').css('color', 'red');
                        break;

                    case 'Алматы':
                        sum = sum * m * v + 50;
                        $('.calc-form > p').css('display', 'block').html('Итого: ' + sum + ' тенге');
                        $('.calc-form > p').css('color', '#168346');
                        break;
                }
            }
        });
